<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Petbondo</title>
        <style>
          * {
            margin: 0;
            padding: 0;
          }
      
          body {
            background-color: rgb(0, 0, 0);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
          }
      
          nav {
            width: 100%;
            background-color:rgb(23, 239, 251);
            box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.1);
          }
          nav ul {
            width: 100%;
            list-style: none;
            display: flex;
            justify-content: flex-end;
            align-items: center;
          }
      
          nav li {
            height: 100px;
          }
      
          nav a {
            height: 100%;
            padding: 0 30px;
            text-decoration: none;
            display: flex;
            align-items: center;
            color: rgb(255, 255, 255);
          }
      
          nav a:hover {
            background-color: #eab3cb;
          }
          nav li:first-child a:hover {
            background-color: rgb(23, 239, 251);
      }
      
          nav li:first-child {
            margin-right: auto;
            font-family: cursive;
            font-size: 28px;
          }
          nav li:first-child a {
            color: black;
          }
          .sidebar {
            position: fixed;
            top: 0;
            right: 0;
            height: 100vh;
            width: 250px;
            background-color: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            box-shadow: -10px 0 10px rgba(0, 0, 0, 0.1);
            list-style: none;
            display: none;
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
          }
      
          .sidebar li {
            width: 100%;
          }
      
          .sidebar a {
            width: 100%;
          }
      
          .menu-button {
            display: none;
          }
          @media(max-width: 800px) {
  .hideOnMobile {
        display: none;
      }

      .menu-button {
        display: block;
      }
  .sidebar {
    width: 100%;
  }
 }

    @media(max-width: 400px) {
  .hideOnMobile {
        display: none;
      }
      .menu-button {
        display: block;
        /* background-color: black; */
        color: white;
        
      }
  .sidebar {
    width: 100%;
  }
}
  </style>
</head>
<body>
    
  <nav>
    <ul class="sidebar">
      <li onclick=hideSidebar()><a href="#"><svg xmlns="http://www.w3.org/2000/svg" height="26" viewBox="0 96 960 960" width="26"><path d="m249 849-42-42 231-231-231-231 42-42 231 231 231-231 42 42-231 231 231 231-42 42-231-231-231 231Z"/></svg></a></li>
      <li><a href="/">Home</a></li>
      <li><a href="/about">About Us</a></li>
      <li><a href="/pets/dogs">Dogs</a></li>
      <li><a href="/pets/cats">Cats</a></li>
      <li><a href="/contact">Contact</a></li>
      
    </ul>
    <ul>
      <li><a href="/">Petbondo</a></li>
      <li class="hideOnMobile"><a href="/">Home</a></li>
      <li class="hideOnMobile"><a href="/about">About Us</a></li>
      <li class="hideOnMobile"><a href="/pets/dogs">Dogs</a></li>
      <li class="hideOnMobile"><a href="/pets/cats">Cats</a></li>
      <li class="hideOnMobile"><a href="/contact">Contact</a></li>
      <li class="menu-button" onclick=showSidebar()><a href="#"><svg xmlns="http://www.w3.org/2000/svg" height="26" viewBox="0 96 960 960" width="26"><path d="M120 816v-60h720v60H120Zm0-210v-60h720v60H120Zm0-210v-60h720v60H120Z"/></svg></a></li>
    </ul>
  </nav>
<body>
    <script>
    function showSidebar(){
      const sidebar = document.querySelector('.sidebar')
      sidebar.style.display = 'flex';
      sidebar.style.backgroundColor='rgba(0, 0, 0, 0.5)'
      sidebar.style.color="white";

    }

    function hideSidebar(){
      const sidebar = document.querySelector('.sidebar')
      sidebar.style.display = 'none'
    }  
    </script>
</body>
</html>