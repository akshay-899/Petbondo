  <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
    }

    body {
      background-color: rgb(0, 0, 0);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    nav {
      background-color: rgb(23, 239, 251);
      box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.1);
    }

    nav ul {
      width: 100%;
      list-style: none;
      display: flex;
      justify-content: flex-end;
      align-items: center;
    }

    nav li {
      height: 100px;
    }

    nav a {
      height: 100%;
      padding: 0 30px;
      text-decoration: none;
      display: flex;
      align-items: center;
      color: rgb(255, 255, 255);
    }

    nav a:hover {
      background-color: #eab3cb;
    }
    nav li:first-child a:hover {
      background-color: rgb(23, 239, 251);
}

    nav li:first-child {
      margin-right: auto;
      font-family: cursive;
      font-size: 28px;
    }
    nav li:first-child a {
      color: black;
    }
    .sidebar {
      position: fixed;
      top: 0;
      right: 0;
      height: 100vh;
      width: 250px;
      background-color: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(12px);
      box-shadow: -10px 0 10px rgba(0, 0, 0, 0.1);
      list-style: none;
      display: none;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
    }

    .sidebar li {
      width: 100%;
    }

    .sidebar a {
      width: 100%;
    }

    .menu-button {
      display: none;
    }
    .container {
      display: flex;
      max-width: 100%;
      margin: 20px auto;
      background-color: rgba(0, 0, 0, 0.9);
      border-radius: 8px;
      overflow: hidden;
      align-items: center;
    }

    .content {
      width: 50%;
      padding: 10px;
      margin: 50px;
      
    }

    .content h2 {
      width:50%;
      color: #ffffff;
      font-size: 32px;
      margin-bottom: 20px;
    }

    .content p {
      color:  rgb(23, 239, 251);
      font-size: 18px;
      line-height: 1.6;
      margin-right: 15px;
    }
    .container .image-holder {
      width: 50%;
      overflow: hidden;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
      margin:  0;
    }

    .image-holder img {
      width: fit-content;
      height: 400px;
      border-radius: 8px;
    }

    .explore-button {
      margin-top: 70px;
      background-color: #f721a8;
      color: white;
      padding: 10px 20px;
      font-size: 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
     display: flex;
    margin-left: 200px;
    
    }

    .explore-button:hover {
      background-color: #c40a6d;
    }
    @media(max-width: 800px) {
      .content h2 {
        justify-content: center;
    text-align: center;
    width: 100%;
  }
      .content {
    width: 100%;
    margin: 20px;
  }
  .hideOnMobile {
        display: none;
      }

      .menu-button {
        display: block;
      }

  .image-holder {
    display: none;
  }

  .sidebar {
    width: 100%;
  }

  .container {
    flex-direction: column;
    align-items: center;
    height: 100vh;
  }
  .content p {
    justify-content: center;
    width: 100%;
    text-align: center;
    margin: 0 0 auto;
  }
  .explore-button {
  margin-top: 20px;
  display: flex;
  justify-content: center;
  text-align: center;
  margin: auto;
}

    }

    @media(max-width: 400px) {
      .content h2 {
        justify-content: center;
    text-align: center;
    width: 100%;
  }
      .content {
    width: 100%;
    margin: 10px;
  }
  .hideOnMobile {
        display: none;
      }

      .menu-button {
        display: block;
      }

  .image-holder {
    display: none;
  }

  .sidebar {
    width: 100%;
  }

  .container {
    flex-direction: column;
    align-items: center;
  }

  .explore-button {
    margin-left: 0;
    margin-top: 20px;
  }

  .explore-button,
  .content p {
    justify-content: center;
    width: 100%;
    text-align: center;
  }
    }
  </style>
